<!DOCTYPE html>
<meta charset="UTF-8">
{% include 'header.twig' %}
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Write Article</h1>
            <form action="{{ path('writeArticle') }}" method="POST">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="content">Text</label>
                    <textarea class="form-control" name="content" id="content" rows="8"></textarea>
                </div>
                <button type="submit" class="btn btn-primary center-block">Save</button>
            </form>
        </div>
    </div>
</div>
{% include 'footer.twig' %}
</body>