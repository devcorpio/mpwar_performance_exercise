<!DOCTYPE html>
<meta charset="UTF-8">
{% include 'header.twig' %}
<body>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Edit Article</h1>
            <form action="{{ path('editArticle', {article_id: article.id}) }}" method="POST">
                <input type="hidden" name="article_id" id="article_id" value="{{ article.id }}" /> <br />
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" class="form-control" value="{{ article.title }}" />
                </div>
                <div class="form-group">
                    <label for="content">Text</label>
                    <textarea class="form-control" name="content" id="content" rows="8">{{ article.content }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary center-block">Save</button>
            </form>
        </div>
    </div>
</div>
{% include 'footer.twig' %}
</body>